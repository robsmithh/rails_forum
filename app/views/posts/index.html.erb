<% @posts.each do |p| %>
  <div class="card" style="width: 36rem;">
    <div class="card-body">
      <h5 class="card-title"><%=link_to p.title, post_path(p) %></h5>
      <p class="card-text"><%= p.post %></p>
      <a href="#" class="card-link"><%= link_to 'Edit', edit_post_path(p), class: "btn btn-primary" %></a> |
      <a href="#" class="card-link"><%= link_to "Delete post", post_path(p), method: :delete,
        data: { confirm: 'Confirm you would like to delete this post' }, class: "btn btn-primary" %></a>
    </div>
  </div>
<% end %>
