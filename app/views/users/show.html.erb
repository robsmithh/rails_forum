<div class="card" style="width: 18rem;">
  <div class="card-header">
    <%= @user.username %>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item"><%= @user.first_name %></li>
    <li class="list-group-item"><%= @user.last_name %></li>
